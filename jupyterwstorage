apiVersion: v1
kind: Pod
metadata:
  name: gpu-pod-example
spec:
  securityContext:
    runAsUser: 0
  containers:
  - name: gpu-container
    image: gitlab-registry.nautilus.optiputer.net/prp/jupyterlab:latest
    command: ["sleep", "infinity"]
    resources:
      limits:
        nvidia.com/gpu: 1
  restartPolicy: Never
 volumes:
 - name: fs-store
   flexVolume:
     driver: ceph.rook.io/rook
     fsType: ceph
     options:
       clusterNamespace: rook
       fsName: nautilusfs
       path: /b1jeong
       mountUser: b1jeong
       mountSecret: ceph-fs-secret
